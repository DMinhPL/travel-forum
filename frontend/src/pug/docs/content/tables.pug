                    var head =  ['#','First','Last','Handle']
                    var data = [
                                ['1','Mark','Otto','@mdo'],
                                ['2','Jacob','Thornton','@fat'],
                                ['3','Larry','the Bird','@twitter']

                +table-dark(head,data)

