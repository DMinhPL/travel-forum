doctype html
include ../components/_var
include ../components/_mixin
html(lang=language)
    head
        block setting   
            -var mainActive = 'home';
            -var bodyClass = '';

        include ../components/_meta

        //- Add Custom CSS
        block styles
    body(class=bodyClass)
        include ../components/_header

        main.wrapper(class=mainClass)
            block content
        // End Main Content

        include ../components/_footer
        
        //- Add Custom Modal
        block modal

        if ishomepage == "undefined" || !ishomepage
            script(src="/assets/js/library.js")
            script(async src="/assets/js/pages.js")
        else
            script(src="/assets/js/library_homepage.js")
            script(async src="/assets/js/main.js")
        
        //- Add Custom Js
        block js